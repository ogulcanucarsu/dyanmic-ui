<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:paddingBottom="4dp">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#fff"/>
        </shape>
    </item>

    <item
        android:top="-2dp"
        android:right="-2dp"
        android:left="-2dp"
        android:bottom="0.2dp">

        <shape>
            <solid android:color="@android:color/white"/>
            <stroke

                    android:width="2dp"
                    android:color="#D0021B"/>
        </shape>
    </item>

</layer-list>
